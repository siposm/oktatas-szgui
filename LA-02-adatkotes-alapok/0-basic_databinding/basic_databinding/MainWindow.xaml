<Window x:Class="basic_databinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:basic_databinding"
        mc:Ignorable="d"
        FontSize="25"
        Title="MainWindow" Height="274.269" Width="474.5">
    <Grid>
        <StackPanel>
            <Label Content="First Name:"></Label>
            <TextBox Text="{Binding FirstName}"></TextBox>

            <Label Content="Last Name:"></Label>
            <TextBox Text="{Binding LastName}"></TextBox>

            <Button Click="UpdateClick" Content="click me to show" Height="49"></Button>
        </StackPanel>
    </Grid>
</Window>

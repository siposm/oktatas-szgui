<Window x:Class="linked_list_visual.NewPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:linked_list_visual"
        mc:Ignorable="d"
        FontSize="20"
        Title="New Linkedin profile" Height="500" Width="300">
    <Grid Background="LightGray">
        <StackPanel Margin="10">
            <Label Content="PROFILE NAME:"/>
            <TextBox Text="{Binding Name}"/>
            
            <Label Content="PROFILE ID:"/>
            <TextBox Text="{Binding ID}"/>

            <Label Content="PROFILE BIRTH YEAR:"/>
            <TextBox Text="{Binding BirthYear}"/>

            <Label Content="PROFILE STATUS (active):"/>
            <CheckBox IsChecked="{Binding IsActive}"/>

            <Label Content="PROFILE CONNECTIONS:"/>
            <TextBox Text="{Binding Connections}"/>

            <Label Content="PROFILE IMAGE:"/>
            <TextBox Text="{Binding Image}"/>

            <Button Click="Button_Click" Content="ADD / SAVE" Background="LawnGreen" Margin="0,10" FontWeight="ExtraBold"/>
        </StackPanel>
    </Grid>
</Window>
